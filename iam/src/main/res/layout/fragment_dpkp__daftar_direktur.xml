<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.pertamina.portal.iam.view.IamButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:background="@drawable/button_bg_rounded_corners_blue"
            app:titleText="Pilih dari Daftar Direktur" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_bg_rounded_corners_grey_stroke"
        android:ems="10"
        android:gravity="top"
        android:hint="Catatan DPKP*"
        android:inputType="textMultiLine|textPersonName"
        android:lines="4"
        android:maxLines="4"
        android:minLines="4"
        android:padding="8dp"
        android:singleLine="false" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:text="*Catatan: Diperlukan untuk menjelaskan keterangan tambahan dari pejabat terpilih atau menginformasikan bahwa direktur yang tergabung ke dalam tim peneliti FPT tidak perlu menandatangani dokumen DPKP karena sudah menyetujui di form Hasil Penilaian FPT"
        android:textColor="@color/iamRed" />

