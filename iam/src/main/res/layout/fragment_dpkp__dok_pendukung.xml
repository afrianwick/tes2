<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="4dp"
            android:text="Attachment (Laporan Asesmen SLAS)"
            android:textStyle="bold" />

        <com.pertamina.portal.iam.view.IamButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            app:background="@drawable/button_bg_rounded_corners_blue"
            app:drawableResource="@drawable/ic_download"
            app:titleText="Download Hal. 1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="4dp"
            android:text="Attachment (DRHS)"
            android:textStyle="bold" />

        <com.pertamina.portal.iam.view.IamButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            app:background="@drawable/button_bg_rounded_corners_blue"
            app:drawableResource="@drawable/ic_download"
            app:titleText="Download Hal. 1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="4dp"
            android:text="Attachment (Nota Pengantar)"
            android:textStyle="bold" />

        <com.pertamina.portal.iam.view.IamButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            app:background="@drawable/button_bg_rounded_corners_blue"
            app:drawableResource="@drawable/ic_download"
            app:titleText="Download Hal. 1" />
    </LinearLayout>

