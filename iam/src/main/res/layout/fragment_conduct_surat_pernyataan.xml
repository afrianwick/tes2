<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:text="Pedoman Perilaku (Code of Conduct)\nPT Pertamina (Persero)"
            android:textAllCaps="true"
            android:textColor="@color/redSlap"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="Surat Pernyataan Insan Pertamina"
            android:textAllCaps="true"
            android:textColor="@color/black45"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="start"
            android:text="Dengan ini saya menyatakan :"
            android:textColor="@color/black87"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16sp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="1. "
                android:textColor="@color/black87"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Telah membaca dan memahami Pedoman Perilaku (Code of Conduct) PT PERTAMINA (Persero) dan bersedia untuk mematuhi semua ketentuan yang tercantum di dalamnya serta menerima sanksi atas pelanggaran yang saya lakukan (jika ada)."                android:textColor="@color/black87"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16sp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="2. "
                android:textColor="@color/black87"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Sebagai pekerja yang bertanggung jawab atas penerapan Pedoman Perilaku (Code of Conduct), saya berkomitmen untuk :"
                android:textColor="@color/black87"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="a. "
                android:textColor="@color/black87"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Melakukan upaya-upaya untuk menjamin kepatuhan terhadap Pedoman Perilaku (Code of Conduct) di unit kerja yang menjadi tanggung jawab saya."
                android:textColor="@color/black87"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="b. "
                android:textColor="@color/black87"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:layout_weight="1"
                android:text="Melaporkan Semua Pelanggaran yang terjadi di unit kerja saya melalui whistleblowing system Pertamina (jika ada)."
                android:textColor="@color/black87"
                android:textSize="14sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="c. "
                android:textColor="@color/black87"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:layout_weight="1"
                android:text="Mendukung pelaksanaan penegakkan Pedoman Perilaku (Code of Conduct) yang dilakukan di lingkungan unit kerja saya."
                android:textColor="@color/black87"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">
            <EditText
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/cocLokasiET"
                android:textSize="14sp"
                android:text="Jakarta"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/cocTanggalTV"
                android:text=", 01 Maret 2019"
                android:textColor="@color/black87"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:id="@+id/cocNamaJabatanTV"
            android:text="John Smith, Analyst Mobility System"
            android:textColor="@color/black87"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_conduct_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textAllCaps="false"
            android:background="@drawable/button_bg_rounded_corners_blue"
            android:text="Pedoman Perilaku (Code of Conduct)"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>