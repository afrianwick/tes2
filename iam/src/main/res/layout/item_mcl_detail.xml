<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight=".7"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/itemMclContainerCV">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFolioNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOLIO_NUM"
                    android:textColor="@color/iamBlackText"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClaimType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CLAIM_TYPE" />

                <TextView
                    android:id="@+id/tvBillDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BILL_DATE"
                    android:textColor="@color/iamBlackText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPatient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PATIENT"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:textColor="@color/iamGreenLight"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/iamLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Claim Amount"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvClaimAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAL_CLAIM_AMOUNT"
                    android:textColor="@color/iamBlackText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tvGrantedAmountLabel"
                    android:text="Granted Amount"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGrantedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAL_GRANTED_AMOUNT"
                    android:textColor="@color/iamBlackText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tvPostedClaimAmountLabel"
                    android:text="Posted Claim Amount"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPostedClaimAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAL_POSTED_CLAIM_AMOUNT"
                    android:textColor="@color/iamBlackText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>