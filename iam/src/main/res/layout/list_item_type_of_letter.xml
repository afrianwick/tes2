<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueStrike"
        android:orientation="horizontal"
        android:id="@+id/listItemTypeOfLetterHeaderLL">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="No"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Jenis Surat"
            android:id="@+id/listItemTypeOfLetterHeader1TV"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Deskripsi"
            android:id="@+id/listItemTypeOfLetterHeader2TV"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/listItemTypeOfLetterContainerLL">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="1"
            android:id="@+id/listItemTypeOfLetterNumberTV"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/greyAction" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/listItemTypeOfLetterNameTV"
            android:text="name"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/greyAction" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/listItemTypeOfLetterDescriptionTV"
            android:text="desc"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyAction" />
</LinearLayout>