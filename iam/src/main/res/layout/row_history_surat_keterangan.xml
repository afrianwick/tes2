<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:id="@+id/row_container_surat_keterangan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_document_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:textColor="@color/black87"
            android:textSize="16sp"
            tools:text="Surat Keterangan Bebas Perkara"/>

        <TextView
            android:id="@+id/txt_document_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black45"
            android:textSize="14sp"
            tools:text="Surat Keterangan Bebas Perkara" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/txt_guide_approval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Approval"
                android:textColor="@color/iamBlack67"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_approval_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_guide_approval"
                android:layout_alignParentStart="true"
                android:textColor="@color/iamBlack67"
                android:textSize="12sp"
                tools:text="14 Nov 2019"/>

            <TextView
                android:id="@+id/txt_guide_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="Expired"
                android:textColor="@color/iamBlack67"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_guide_approval"
                android:layout_alignParentEnd="true"
                android:textColor="@color/iamBlack67"
                android:textSize="12sp"
                tools:text="14 Nov 2019"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_line"
                android:layout_alignTop="@id/txt_expiry_date"
                android:layout_alignBottom="@id/txt_expiry_date"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>