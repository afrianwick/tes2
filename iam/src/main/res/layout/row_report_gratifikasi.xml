<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pengisian"/>

                    <TextView
                        android:id="@+id/txt_report_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_medium"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:text="31 Nov 2019"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Gratifikasi"/>

                    <TextView
                        android:id="@+id/txt_gratifikasi_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_medium"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:text="31 Nov 2019"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_report_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text="Gratifikasi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text=": "/>

                <TextView
                    android:id="@+id/txt_report_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black87"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="Ada / Tidak ada Gratifikasi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text="Nilai"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text=": "/>

                <TextView
                    android:id="@+id/txt_jumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black87"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="Ada / Tidak ada Gratifikasi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text="Jenis"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text=": "/>

                <TextView
                    android:id="@+id/txt_jenis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black87"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="Ada / Tidak ada Gratifikasi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:id="@+id/txt_type"
                    android:text="Peminta"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text=": "/>

                <TextView
                    android:id="@+id/txt_peminta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black87"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="Ada / Tidak ada Gratifikasi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text="Alasan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black45"
                    android:textSize="12sp"
                    android:text=": "/>

                <TextView
                    android:id="@+id/txt_alasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_italic"
                    android:textColor="@color/black87"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="Ada / Tidak ada Gratifikasi" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/ic_arrow_line"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>