                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="1"
                        android:textColor="@android:color/black"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
